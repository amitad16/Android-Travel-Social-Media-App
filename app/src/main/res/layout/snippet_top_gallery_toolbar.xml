<merge
    xmlns:android="http://schemas.android.com/apk/res/android">

    <android.support.design.widget.AppBarLayout
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:layout_alignParentTop="true"
        android:background="@drawable/grey_border_bottom">

        <android.support.v7.widget.Toolbar
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/profile_tool_bar">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">


                <ImageView
                    android:id="@+id/iv_close_share"
                    android:layout_width="32dp"
                    android:layout_height="32dp"
                    android:layout_marginEnd="20dp"
                    android:layout_marginRight="20dp"
                    android:layout_centerVertical="true"
                    android:src="@drawable/ic_cross"
                    android:padding="5dp" />

                <Spinner
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_toRightOf="@id/iv_close_share"
                    android:layout_centerVertical="true"
                    android:layout_toEndOf="@id/iv_close_share"
                    android:id="@+id/spinner_directory"
                    android:gravity="center_vertical"
                    android:text="Gallery">


                </Spinner>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/string_next"
                    android:layout_alignParentRight="true"
                    android:layout_marginEnd="@dimen/base_margin"
                    android:layout_alignParentEnd="true"
                    android:layout_marginRight="@dimen/base_margin"
                    android:layout_centerVertical="true"
                    android:textSize="@dimen/base_font_size"
                    android:textColor="@color/link_blue"
                    android:id="@+id/tv_next"/>

            </RelativeLayout>

        </android.support.v7.widget.Toolbar>

    </android.support.design.widget.AppBarLayout>

</merge>