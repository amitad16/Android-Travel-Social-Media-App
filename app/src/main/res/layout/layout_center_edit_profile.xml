<merge xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/white"
            android:padding="16dp">

            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/profile_image"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="@dimen/base_margin"
                android:src="@drawable/profile_image"
                app:civ_border_color="@color/grey"
                app:civ_border_width="1dp" />

            <ProgressBar
                android:layout_width="120dp"
                android:layout_height="120dp"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="6dp"
                android:id="@+id/progress_profile_image"/>

            <TextView
                android:id="@+id/change_profile_image"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/profile_image"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="@dimen/base_margin"
                android:text="Change Image"
                android:textColor="@color/link_blue"
                android:textSize="@dimen/mid_font_size" />

            <LinearLayout
                android:id="@+id/linLayout1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/change_profile_image"
                android:orientation="vertical"
                android:layout_marginTop="@dimen/base_margin">

                <android.support.design.widget.TextInputLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20dp">

                    <EditText
                        android:id="@+id/display_name"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:inputType="textNoSuggestions"
                        android:text="Lorem Ipsum"
                        android:hint="Name"
                        android:textSize="@dimen/base_font_size"/>

                </android.support.design.widget.TextInputLayout>

                <android.support.design.widget.TextInputLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20dp">

                    <EditText
                        android:id="@+id/display_username"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:inputType="textNoSuggestions"
                        android:text="loremipsum"
                        android:hint="Username"
                        android:textSize="@dimen/base_font_size"/>

                </android.support.design.widget.TextInputLayout>

                <android.support.design.widget.TextInputLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20dp">

                    <EditText
                        android:id="@+id/display_website"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:inputType="textNoSuggestions"
                        android:text="https://www.abc.com"
                        android:hint="Website"
                        android:textSize="@dimen/base_font_size"/>

                </android.support.design.widget.TextInputLayout>

                <android.support.design.widget.TextInputLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20dp">

                    <EditText
                        android:id="@+id/display_bio"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:inputType="textNoSuggestions"
                        android:text="I live in Dehradun"
                        android:hint="Bio"
                        android:textSize="@dimen/base_font_size"/>

                </android.support.design.widget.TextInputLayout>

            </LinearLayout>


            <!-- ************ PRIVATE INFORMATION *************** -->

            <TextView
                android:id="@+id/text_private_info"
                style="@style/TopBarText"
                android:text="Private Information"
                android:layout_marginTop="48dp"
                android:layout_below="@id/linLayout1"/>

            <LinearLayout
                android:id="@+id/linLayout2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/text_private_info"
                android:orientation="vertical"
                android:layout_marginTop="@dimen/base_margin">

                <android.support.design.widget.TextInputLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20dp">

                    <EditText
                        android:id="@+id/display_phone"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:inputType="textNoSuggestions"
                        android:text="I live in Dehradun"
                        android:hint="Phone Number"
                        android:layout_marginTop="@dimen/base_margin"
                        android:textSize="@dimen/base_font_size"/>

                </android.support.design.widget.TextInputLayout>

                <android.support.design.widget.TextInputLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20dp">

                    <EditText
                        android:id="@+id/display_email"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:inputType="textNoSuggestions"
                        android:text="loremipsum@gmail.com"
                        android:hint="E-mail Address"
                        android:layout_marginTop="@dimen/base_margin"
                        android:textSize="@dimen/base_font_size"/>

                </android.support.design.widget.TextInputLayout>

            </LinearLayout>


        </RelativeLayout>

    </ScrollView>

</merge>